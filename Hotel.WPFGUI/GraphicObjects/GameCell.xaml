<UserControl x:Class="WpfGUI.GraphicObjects.GameCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="100" Width="100">
    <Canvas Height="100" >       
        <Path Stroke="Black" StrokeThickness="2" Height="50" Width="100" Fill="Yellow">
            <Path.Data>
                <GeometryGroup>
                    <PathGeometry>
                        <PathFigure IsClosed="False" StartPoint="1,50">
                            <ArcSegment Size="10,10" SweepDirection="Clockwise" Point="99,50" />
                        </PathFigure>
                    </PathGeometry>
                </GeometryGroup>
            </Path.Data>
        </Path>
        <Path Stroke="Black" Fill="Yellow" StrokeThickness="2" Height="50" Width="100" Canvas.Top="49">
            <Path.Data>
                <GeometryGroup>
                    <PathGeometry>
                        <PathFigure IsClosed="true" StartPoint="1,0">
                            <ArcSegment Size="10,10" SweepDirection="Counterclockwise" Point="99,0" />
                        </PathFigure>
                    </PathGeometry>
                </GeometryGroup>
            </Path.Data>
        </Path>
        <Ellipse Fill="White" Canvas.Top="15" Canvas.Left="15" Stroke="Black" StrokeThickness="2" Height="70" Width="70" />
    </Canvas>

</UserControl>
